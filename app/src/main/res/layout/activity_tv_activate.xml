<?xml version="1.0" encoding="utf-8"?>

<!-- TV Waiting Queue Main -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_relative"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <!-- Outer Container -->
    <LinearLayout
        android:id="@+id/tv_header"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#333"
        android:orientation="vertical">

        <!-- IP Address -->
        <LinearLayout
            android:id="@+id/tv_info_header"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="#232323"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_android_id"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:background="#232323"
                android:gravity="start|center_vertical"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_ip_address"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#232323"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_connection_icon"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|end"
                    android:background="#232323"
                    android:contentDescription="icon_internet_connection"
                    android:src="@drawable/icon_ethernet"></ImageView>

            </LinearLayout> -->

                <TextView
                    android:id="@+id/tv_connection_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Main Header -->
        <LinearLayout
            android:id="@+id/tv_activate_header"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="#333"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/tv_activate_precision_logo"
                    android:layout_width="200dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:contentDescription="@string/precision_logo"
                    android:src="@drawable/logo_precision_white"/>

            </LinearLayout>

            <!-- Clock -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <!--
            <TextView
                android:id="@+id/tv_clock"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="00:00 PM"
                android:textColor="@color/white"
                android:textSize="20sp" /> -->

        </LinearLayout>

        <!-- Header -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="380dp"
            android:background="#333"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:paddingBottom="90dp"
                android:paddingStart="60dp"
                android:paddingEnd="40dp"
                android:paddingTop="60dp"
                android:background="@drawable/box_border"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Text -->
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="@string/activate_scan_qr_label"
                    android:textColor="#d6d6d6"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="@string/activate_device_code_label"
                    android:textColor="#d6d6d6"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/box_border"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="9"
                    android:text=""
                    android:textColor="#d6d6d6"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:contentDescription="@string/icon_qr_code"
                    android:src="@drawable/qr_waiting"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="10"
                    android:text=""
                    android:textColor="#d6d6d6"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Footer -->
        <LinearLayout
            android:id="@+id/tv_footer"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="#232323"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible">

            <!-- Scan message -->
            <TextView
                android:id="@+id/tv_qr_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:gravity="center_vertical|end"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="italic"/>


        </LinearLayout> <!-- End footer container -->

    </LinearLayout>

</RelativeLayout>