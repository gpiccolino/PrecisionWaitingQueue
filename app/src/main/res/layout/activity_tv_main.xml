<?xml version="1.0" encoding="utf-8"?>

<!-- TV Waiting Queue Main -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_relative"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <!-- Outer Container -->
    <LinearLayout
        android:id="@+id/tv_header"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#232323"
        android:orientation="vertical">

        <!-- Info Header -->
        <LinearLayout
            android:id="@+id/tv_info_header"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="#232323"
            android:orientation="horizontal">

            <!-- Unique Station Code -->
            <TextView
                android:id="@+id/tv_station_code"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:background="#232323"
                android:gravity="start|center_vertical"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12sp" />

            <!-- IP Address -->
            <TextView
                android:id="@+id/tv_ip_address"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#232323"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12sp" />

                <!-- Version Code -->
                <TextView
                    android:id="@+id/tv_version_code"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:layout_marginEnd="25dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12sp" />

        </LinearLayout>

        <!-- Main Header -->
        <LinearLayout
            android:id="@+id/tv_main_header"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="#333"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <!-- Store Note -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_store_note_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:contentDescription="@string/icon_waving_hand"
                    android:src="@drawable/icon_waving_hand" />

                <TextView
                    android:id="@+id/tv_store_note"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical|start"
                    android:text="@string/welcome_label"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Store Name -->
                <TextView
                    android:id="@+id/tv_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_list_type"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|top"
                    android:text="@string/pickup_list_label"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Clock -->
            <DigitalClock
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <!--
            <TextView
                android:id="@+id/tv_clock"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="00:00 PM"
                android:textColor="@color/white"
                android:textSize="20sp" /> -->

        </LinearLayout>

        <!-- Header -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#232323"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/box_border"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="9"
                    android:text=""
                    android:textColor="#d6d6d6"
                    android:textSize="24sp" />

                <!-- Waiting text -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:gravity="center_vertical|end"
                    android:layout_marginEnd="10dp"
                    android:text="@string/waiting_label"
                    android:textColor="#d6d6d6"
                    android:textSize="24sp" />

                <!-- Waiting Counter -->
                <TextView
                    android:id="@+id/tv_wait_counter"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_red"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/default_count"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="10"
                    android:text=""
                    android:textColor="#d6d6d6"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/box_border"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="9"
                    android:text=""
                    android:textColor="#d6d6d6"
                    android:textSize="24sp" />

                <!-- Ready text -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical|end"
                    android:layout_marginEnd="10dp"
                    android:text="@string/ready_label"
                    android:textColor="#d6d6d6"
                    android:textSize="24sp" />

                <!-- Ready Counter -->
                <TextView
                    android:id="@+id/tv_ready_counter"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_green"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/default_count"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="10"
                    android:text=""
                    android:textColor="#d6d6d6"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Table Header -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <!-- Waiting Header -->
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#333"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:background="@drawable/box_border"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/number_label"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="10"
                    android:background="@drawable/box_border"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/order_details_label"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="7"
                    android:background="@drawable/box_border"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/customer_name_label"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="5"
                    android:background="@drawable/box_border"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/arrival_time_label"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="5"
                    android:background="@drawable/box_border"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/status_label"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>

            <!-- Ready Header -->
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#333"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:background="@drawable/box_border"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/number_label"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="10"
                    android:background="@drawable/box_border"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/order_details_label"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="7"
                    android:background="@drawable/box_border"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/customer_name_label"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="5"
                    android:background="@drawable/box_border"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/ready_time_label"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="5"
                    android:background="@drawable/box_border"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/ready_label"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </TableRow>

        </LinearLayout>

        <!-- Table Main Content -->
        <LinearLayout
            android:id="@+id/tv_activity_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#232323"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <!-- Left - Waiting List -->
            <ListView
                android:id="@+id/tv_waitlist"
                android:layout_width="10dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/box_border"
                android:divider="#424242"
                android:dividerHeight="0dp"
                android:textColor="#a0a0a0" />

            <!-- Right - Ready List -->
            <ListView
                android:id="@+id/tv_readylist"
                android:gravity="center_horizontal"
                android:divider="#424242"
                android:dividerHeight="0dp"
                android:layout_width="10dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/box_border"
                android:textColor="#a0a0a0" />

        </LinearLayout>

    </LinearLayout>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/tv_footer"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:background="#333"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">

        <!-- Scan message -->
        <TextView
            android:id="@+id/tv_qr_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="25dp"
            android:gravity="center_vertical|end"
            android:text="@string/scan_qr_label"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="italic" />

        <!-- QR code -->
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginEnd="100dp"
            android:contentDescription="@string/icon_qr_code"
            android:src="@drawable/qr_waiting"/>

    </LinearLayout> <!-- End footer container -->

</RelativeLayout>