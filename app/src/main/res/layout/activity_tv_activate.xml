<?xml version="1.0" encoding="utf-8"?>

<!-- TV Waiting Queue Main -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_relative"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <!-- Outer Container -->
    <LinearLayout
        android:id="@+id/tv_header"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#232323"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/tv_activate_header"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="#232323"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <!--<ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/cloud_blk_ico" />-->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:text="@string/activate_header_label"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:textStyle="bold" />



        </LinearLayout> <!-- End Header -->

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="380dp"
            android:background="#232323"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <!-- Text Container -->
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="75dp"
                android:paddingTop="50dp"
                android:paddingEnd="50dp"
                android:paddingBottom="50dp">

                <!-- Text -->
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="@string/activate_setup_guide_label"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="@string/activate_step_1_label"
                    android:textColor="#d6d6d6"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="@string/activate_step_2_label"
                    android:textColor="#d6d6d6"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="@string/activate_step_3_label"
                    android:textColor="#d6d6d6"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity=""
                    android:text="@string/activate_step_4_label"
                    android:textColor="#d6d6d6"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Image Container -->
            <ImageView
                android:id="@+id/tv_activate_image"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:paddingEnd="75px"
                android:src="@drawable/tv_remote_setup" />

        </LinearLayout>

       <!-- End Main Content -->

    </LinearLayout> <!-- End Outer Container -->

    <!-- Footer #FFD15C-->
    <LinearLayout
        android:id="@+id/tv_footer"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:background="#d6d6d6"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible">

        <!-- Support message FFD15C-->
        <TextView
            android:id="@+id/tv_qr_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/activate_support_label"
            android:textColor="#232323"
            android:textSize="14sp" />

    </LinearLayout> <!-- End footer container -->

</RelativeLayout>